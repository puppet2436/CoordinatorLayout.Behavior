      />

    <View
      android:layout_width="match_parent"
      android:layout_height="144dp"
      android:background="#89d7d7"
      />

    <View
      android:layout_width="match_parent"
      android:layout_height="144dp"
      android:background="#9a769f"
      />

    <View
      android:layout_width="match_parent"
      android:layout_height="144dp"
      android:background="#c193c4"
      />

    <View
      android:layout_width="match_parent"
      android:layout_height="144dp"
      android:background="#7facac"
      />

    <View
      android:layout_width="match_parent"
      android:layout_height="144dp"
      android:background="#245656"
      />
  </LinearLayout>

</android.support.v4.widget.NestedScrollView>